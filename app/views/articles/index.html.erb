<p id="notice"><%= notice %></p>

<div class="blog-header">
<div class="container">
<h1 class="blog-title">Tan's Blog</h1>
<p class="lead blog-description">The prework assignment for CoderSchool's ruby class!</p>
</div>
</div>

<div class="container">
<div class="row">
<div class="col-sm-8 blog-main">
<% @articles.each do |article| %>
<div class="row">
<div class="col-xs-12">
<div class="card">
<div class="card-block">
<h4 class="card-title"><%= article.title %></h4>
<p class="card-text"> <%= markdown(article.body) %>  </p>
</div>
<div class="card-footer">
<%= link_to edit_article_path(article) do %>
<button type="button" class="btn btn-sm btn-warning-outline">Edit</button>
<% end %>
<%= link_to article_path(article), method: :delete, data: { confirm: 'Are you sure?' } do %>
<button type="button" class="btn btn-sm btn-danger-outline">Delete</button>
<% end %>
</div>
</div>
</div>
<div class="row">
<div class="col-xs-12">

</div>
</div>
<% end %>
</div>
</div>
<div class="row">
<div class="col-sm-8">
<hr/>
<%= link_to new_article_path do %>
<button type="button" class="btn btn-sm btn-success-outline">New Article</button>
<% end %>
</div>
</div>
<br>